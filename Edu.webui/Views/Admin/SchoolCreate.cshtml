@model SchoolModel
@section Style{
    @* //Live Search *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    @* //DateTime Picker *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
}
@section Script{

    @* //Live Search *@
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/js/bootstrap-select.min.js"></script>
    @* //DateTime Picker *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    @* //ServerSide Validation *@
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>


    <script>
        $('.dateTime').datepicker();
    </script>
}
<div class="row ml-4">
    <form asp-controller="Admin" asp-action="SchoolCreate" method="POST" enctype="multipart/form-data">
        <div class="col-sm-6">
            <h1 class="h3">School Create</h1> <hr>
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="Name"></label>
                        <div class="">
                            <input class="form-control" asp-for="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <input class="form-check-input" type="checkbox" asp-for="active">
                        <label for="active" class="form-check-label">Active</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="LogoUrl"></label>
                        <div class="">
                            <input class="form-control" type="file" name="file">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Url"></label>
                        <div class="">
                            <input class="form-control" asp-for="Url">
                            <span class="text-danger" asp-validation-for="Url"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary col-md-3">Save</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            
        </div>
    </form>
</div>


