@model RegisterModel
@section Style{
    @* //DateTime Picker *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
}
@section Script{
    @* //DateTime Picker *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    @* //ServerSide Validation *@
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $('.dateTime').datepicker();
    </script>
}

<div class="row ml-4">
    <form asp-controller="Admin" asp-action="UserRegister" method="POST">
        <div class="col-sm-6">
            <h1 class="h3">User Register</h1> <hr>
            <div class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="FirstName"></label>
                        <div class="">
                            <input class="form-control" asp-for="FirstName">
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="LastName"></label>
                        <div class="">
                            <input class="form-control" asp-for="LastName">
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="UserName"></label>
                        <div class="">
                            <input class="form-control" asp-for="UserName">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Email"></label>
                        <div class="">
                            <input class="form-control" asp-for="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="PhoneNumber"></label>
                        <div class="">
                            <input class="form-control" asp-for="PhoneNumber">
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label>Date of Birth</label>
                        <div class="">
                            <input class="form-control dateTime" asp-for="BirthDate" >
                            <span class="text-danger" asp-validation-for="BirthDate"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary col-md-3">Register</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
    </form>
</div>


