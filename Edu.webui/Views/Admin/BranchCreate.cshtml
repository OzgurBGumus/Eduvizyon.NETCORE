@model BranchModel
@section Style{
    @* //Live Search *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    @* //DateTime Picker *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
}
@section Script{

    @* //Live Search *@
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/js/bootstrap-select.min.js"></script>
    @* //DateTime Picker *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    @* //ServerSide Validation *@
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    @* //File Upload *@
    <script src="/modules/blueimp-file-upload/js/jquery.fileupload.js"></script>
    <script>
        $('#fileUpload').fileupload();
        $('.dateTime').datepicker();
    </script>
}
<div class="row ml-4">
    <form asp-controller="Admin" asp-action="BranchCreate" method="POST" enctype="multipart/form-data">
        <div class="col-sm-6">
            <h1 class="h3">Branch Create</h1>
            <small><b>School: @ViewBag.School.Name</b></small> <hr>
            <input type="hidden" asp-for="SchoolId" value="@ViewBag.School.SchoolId">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="Iban"></label>
                        <div class="">
                            <input class="form-control" asp-for="Iban">
                            <span class="text-danger" asp-validation-for="Iban"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Discount"></label>
                        <div class="">
                            <input class="form-control" asp-for="Discount">
                            <span class="text-danger" asp-validation-for="Discount"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <input class="form-check-input" type="checkbox" asp-for="Active">
                        <label for="active" class="form-check-label">Active</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label asp-for="Email"></label>
                        <div class="">
                            <input class="form-control" asp-for="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Phone"></label>
                        <div class="">
                            <input class="form-control" asp-for="Phone">
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-4">
                        <label asp-for="CountryId"></label>
                        <div class="">
                            <select class="selectpicker" data-live-search="true" data-size=5 asp-for="CountryId" asp-items="@ViewBag.AllCountries"></select>
                            <span class="text-danger" asp-validation-for="CountryId"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="StateId"></label>
                        <div class="">
                            <select class="selectpicker" data-live-search="true" data-size=5 asp-for="StateId" asp-items="@ViewBag.AllStates">
                                <option value="0"> Empty</option>
                            </select>
                            <span class="text-danger" asp-validation-for="StateId"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="CityId"></label>
                        <div class="">
                            <select class="selectpicker" data-live-search="true" data-size=5 asp-for="CityId" asp-items="@ViewBag.AllCities">
                                <option value="0"> Empty</option>
                            </select>
                            <span class="text-danger" asp-validation-for="CityId"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-12">
                        <label asp-for="Adress"></label>
                        <div class="">
                            <input class="form-control" asp-for="Adress">
                            <span class="text-danger" asp-validation-for="Adress"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-4">
                        <label asp-for="PriceVisa"></label>
                        <div class="">
                            <input class="form-control" asp-for="PriceVisa">
                            <span class="text-danger" asp-validation-for="PriceVisa"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="PriceHealthInsurance"></label>
                        <div class="">
                            <input class="form-control" asp-for="PriceHealthInsurance">
                            <span class="text-danger" asp-validation-for="PriceHealthInsurance"></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="PriceAirportPickup"></label>
                        <div class="">
                            <input class="form-control" asp-for="PriceAirportPickup">
                            <span class="text-danger" asp-validation-for="PriceAirportPickup"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary col-md-3">Save</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
    
</div>
<div class="row">
    <div class="col-sm-6">
        
    </div>
</div>


